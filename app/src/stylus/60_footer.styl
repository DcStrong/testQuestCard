@require 'colors.styl'

/* #region footer */

footer.footer
  position relative
  padding 15rem 0 5rem
  background-color $primary
  &:before
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 10rem
    background-image url(../assets/img/sep-top.svg)
    background-size 100% 100%
    background-repeat no-repeat
    background-position 100% 100%

.footer__main
  align-items center

.footer__logo-wrapper
  @media screen and (max-width 768px)
    flex-basis 50%
    max-width 50%
    & .footer__logo
      margin-left 0
  @media screen and (max-width 480px)
    flex-basis 100%
    max-width 100%
    & .footer__logo
      margin-left auto

.footer .site-logo
  display flex
  margin 0 auto
  width 15rem
  height 10rem
  flex-direction column
  justify-content center
  @media screen and (max-width 768px)
    width 15rem
  @media screen and (max-width 480px)
    width 10rem
    height 8rem

.footer .site-logo img
  display block
  width 100%
  height auto
  object-fit cover
  font-family 'object-fit: contain;'

.footer__contacts
  color $text-accent
  font-size 1.6rem
  @media screen and (max-width 768px)
    padding-left 0
    flex-basis 50%
    max-width 50%
  @media screen and (max-width 480px)
    margin 1rem 0
    padding-left 15px
    flex-basis 100%
    max-width 100%

.footer__contacts .phone,
.footer__contacts .email
  color $text-accent

.footer__nav
  @media screen and (max-width 768px)
    flex-basis 100%
    max-width 100%

.footer__menu
  display flex
  margin 0
  padding 0
  list-style none
  flex-flow row wrap
  @media screen and (max-width 480px)
    flex-direction column

.footer__menu .menu-item
  margin 1rem 0
  flex 1 1 50%

.footer__menu .menu-item a
  display block
  font-size 1.6rem
  color $text-accent
  text-decoration: underline

/* #endregion */