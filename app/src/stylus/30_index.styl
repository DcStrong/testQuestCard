@require 'colors.styl'

/* #region page-main */

.page-main .title
  margin-top 10rem
  margin-bottom 0
  font-size 4.3rem
  letter-spacing 6px
  line-height 6rem
  text-align center
  font-family "forum"
  text-transform uppercase
  color $text-accent

  @media screen and (max-width 768px)
    margin-top 5rem
    font-size 3rem
    letter-spacing 3px
    line-height 5rem

  @media screen and (max-width 480px)
    margin-top 2rem
    font-size 2rem
    letter-spacing 3px
    line-height 4rem

  @media screen and (max-width 320px)
    margin-top 1rem
    font-size 1.5rem
    letter-spacing 2px
    line-height 3rem

.page-main .realty
  display flex
  margin-top 5rem
  flex-flow row nowrap
  justify-content space-evenly

  @media screen and (max-width 768px)
    margin-top 5rem

  @media screen and (max-width 480px)
    margin-top 2rem
    flex-flow row wrap

  @media screen and (max-width 320px)
    margin-top 0

.page-main .realty__link
  display inline-block
  padding 1rem 5rem
  font-size 1.6rem
  color $text-accent
  background-color $secondary
  border-radius 0.5rem
  font-family "Gotham Pro", "Open Sans", sans
  text-decoration none
  opacity .9
  box-shadow 1px 1px 3px rgba(0,0,0, .3)
  transition all .3s
  &:hover
    color $text-accent
    box-shadow 2px 2px 5px rgba(0,0,0, .5)
    opacity 1
  @media screen and (max-width 480px)
    margin-top 3rem

/* #endregion */


/* #region page-main slider */

.page-main .slides
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index -1
  &:after
    content ""
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color $primary
    opacity 0.6

@media screen and (max-width 768px)
  .page-main .slides__controls
    display none

.page-main .slides__slide
  width 100%
  height 100%

.page-main .slides__title
  left 45px
  position absolute
  bottom 35px
  color $text-accent
  background-color $secondary
  padding 10px
  border-radius 5px
  @media screen and (max-width 480px)
    display none

.page-main .slides__img
  width 100%
  height 100%
  object-fit cover
  font-family 'object-fit: contain;'

.page-main .slides [data-simple-slider]
  height 100%
  z-index -2

.page-main .slides__prev,
.page-main .slides__next
  position absolute
  top 50%
  background-position center center
  background-repeat no-repeat
  background-size 100% 100%
  background-color transparent
  border none
  padding 0
  margin 0
  width 6rem
  height 6rem

.page-main .slides__prev
  left 1rem
  background-image url(../assets/icons/left.svg)

.page-main .slides__next
  right 1rem
  background-image url(../assets/icons/right.svg)

/* #endregion */
