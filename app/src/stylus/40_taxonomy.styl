@require 'colors.styl'

/* #region page-taxonomy */

.page-taxonomy .section__img-wrapper
  position absolute
  top 0
  left 0
  width 100%
  height 100%

.page-taxonomy .section__img
  position relative
  width 100%
  height 100%
  object-fit cover
  z-index 0

.page-taxonomy .section__img-overlay
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-color $primary
  opacity .4
  z-index 1

.page-taxonomy .section__title
  text-align center
  margin 7rem 0 0 0

/* #endregion */

.categories
  color: $text-accent
  height: 180px

.categories__head
  position: absolute
  width: 100%
  height: 455px
  top: 0
  left: 0
  z-index: -1

.categories-img
  width: 100%
  height: 100%
  object-fit: cover

.categories-title
  text-align: center
  margin: 7rem 0 0 0

.select__categories
  display: flex
  justify-content: center
  margin: 10rem 0 0 0

.categories-input
  background-color: transparent
  border: 2px solid $secondary
  border-radius: 5px

#date-checkout .categories-input
  margin-right: 1rem
  margin-left: 1rem

.categories-wrapper
  position: relative

input#date-checkout
  margin: 0 4rem

.categories-input
  background-color: transparent
  border: 2px solid $secondary
  border-radius: 5px
  padding: 10px 10px 0
  font-size: 1.6rem
  z-index: 2
  color: $text-accent

.categories__label.middle-label
  margin: 0 4rem