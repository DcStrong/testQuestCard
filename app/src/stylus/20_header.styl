@require 'colors.styl'

/* #region header */

header.header
  position relative
  z-index 1000

.header__nav-global
  padding 1rem 0 0
  align-items center

.header__logo
  display flex
  margin 0 auto
  width 20rem
  height 13rem
  flex-direction column
  justify-content center

.header__logo img
  display block
  width 100%
  height auto
  object-fit cover

.header__contacts
  text-align right

.header__phone
  display block
  font-size 1.8rem
  color $text-accent
  @media screen and (max-width 480px)
    font-size: 1.2rem

  @media screen and (max-width 320px)
    font-size: 1rem

.header__callme
  padding 0
  margin 0
  border none
  font-size 1.6rem
  color $secondary
  text-decoration underline
  background-color transparent
  @media screen and (max-width 480px)
    font-size: 1.2rem

  @media screen and (max-width 320px)
    font-size: 1rem

.header__menu
  display flex
  margin-top 5rem
  margin-bottom 0
  padding 0
  flex-flow row nowrap
  justify-content space-between
  list-style none

.header__menu-toggler--open
  display block
  width 3rem
  height 2rem
  background-image url(../assets/icons/open.png)
  background-size cover

.header__menu .menu-item a
  display block
  color $text-accent
  text-decoration none
  font-size 1.6rem
  &:hover
    color $secondary
    text-decoration underline

/* #media query */

@media screen and (max-width 768px)
  header.header
    max-width 100%

  .header__logo
     width 15rem

  .header__nav
    position absolute
    width 30rem
    height 100vh
    top 0
    left -100%
    background-color $primary
    z-index 1
    transition all 300ms ease-in-out

  .header__nav:target
    left 0

  .header__nav .header__menu
    display block
    margin-top 0
    padding-top 4rem
    height 100%

  .header__menu .menu-item a
    padding: 1.5rem 3rem

  .header__menu-toggler--close
    position absolute
    width 2.2rem
    height 2.2rem
    top 0
    right 0
    background-image url(../assets/icons/close.png)
    background-size cover
    transform: translate(-50%, 50%);

@media screen and (max-width 480px)
  .header__logo
     width 10rem
     height 8rem

@media screen and (max-width 320px)
  .header__nav
    width 100%

@media screen and (min-width 769px)
  .header__menu-toggler--open
    display none

/* #endregion */
