include includes/header.pug

div.page-taxonomy
  section.section
    div.section__header
      div.section__img-wrapper
        img.section__img(src="../assets/img/apart_bg.jpg", alt="")
        div.section__img-overlay

      h1.section__title Аппартаменты

    div.section__body.container
      div.categories-wrapper
        input#date-checkin.categories-input.datepicker-here(type="text" required readonly)
        label.categories__label(for="date-checkin") Заезд
      div.categories-wrapper
        input#date-checkout.categories-input.datepicker-here(type="text" required readonly)
        label.categories__label.middle-label(for="date-checkout") Выезд
      div.categories-wrapper
        input#guests.categories-input(type="text" required)
        label.categories__label(for="guests") Кол-во гостей
      button.categories-button(type="button")

include includes/footer.pug